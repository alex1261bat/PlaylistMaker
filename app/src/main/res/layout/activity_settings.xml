<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/main_activity_padding_start_end"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settingsBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-16dp"
        app:buttonGravity="center_vertical"
        app:navigationIcon="@drawable/back_space"
        app:title="@string/settings" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <TextView
            style="@style/SettingsTextStyle"
            android:text="@string/dark_theme" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:theme="@style/SettingsSwitchStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/shareButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/SettingsTextStyle"
            android:text="@string/share_app" />

        <ImageView
            style="@style/SettingsIconStyle"
            android:src="@drawable/share" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/sendToSupportButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/SettingsTextStyle"
            android:text="@string/support" />

        <ImageView
            style="@style/SettingsIconStyle"
           android:src="@drawable/support" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/userAgreementButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/SettingsTextStyle"
            android:text="@string/user_agreement" />

        <ImageView
            style="@style/SettingsIconStyle"
            android:src="@drawable/arrow_right" />
    </FrameLayout>

</LinearLayout>

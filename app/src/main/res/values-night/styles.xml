<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="MainActivityLayout">
        <item name="android:background">@color/black</item>
    </style>

    <style name="MainActivityButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_margin_to_text</item>
        <item name="iconTint">@color/yp_black</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/settings_padding_top_bottom</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="SettingsIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|end</item>
    </style>

    <style name="SettingsSwitchStyle" parent="Theme.AppCompat.Light">
        <item name="colorSwitchThumbNormal">@color/yp_white</item>
        <item name="trackTintMode">multiply</item>
        <item name="trackTint">@color/yp_grey</item>
        <item name="colorControlActivated">@color/yp_blue</item>
    </style>

    <style name="SearchEditTextStyle">
        <item name="android:textColorHint">@color/yp_black</item>
    </style>

    <style name="TrackTextStyle">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TrackTitleTextStyle">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SearchPlaceholderTextStyle">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SearchPlaceholderTextYouSearchedStyle">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">500</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MediaMainTextStyle">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
    </style>

    <style name="MediaMainTrackTextStyle">
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight" tools:targetApi="p">400</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MediaTabStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/yp_white</item>
        <item name="tabIndicatorColor">@color/yp_white</item>
        <item name="tabTextAppearance">@style/MediaTabTextAppearance</item>
    </style>

    <style name="MediaTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/media_text_size_14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>